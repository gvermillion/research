#nimud floating point parameter in input script or data file (../fix_nh.cpp:132)energy for Beryl

#----- Initialize Simulation -----
clear
units           metal
boundary        p p p 
atom_style      full
bond_style      none
variable        probeTemp equal 525

#----- Create Atoms -----
read_data       mod/beryl.xyz
replicate       8 8 2   

#----- Define Interatomic Potential -----
include         mod/potential_main.mod
include         mod/potential_beryl.mod
#------ Define Settings -----

# ----- Run Minimization -----
reset_timestep  0
timestep        0.001
velocity        all create ${probeTemp} 87287 loop geom
fix             1 all npt temp ${probeTemp} ${probeTemp} 0.1 iso 1.013 1.013 5.0 

run             14000 # Warmup
reset_timestep  0
fix             2 all ave/time 1 1 50 c_thermo_temp c_thermo_pe c_thermo_press v_myVol v_myCella v_myCellb v_myCellc v_myCellgamma file data/current_run/cp_rawTemp${probeTemp}.dat # Potential energy, parameters, volume 
run             100000 
unfix           2   
variable        probeTemp delete

print           " " 
print           "All done!"
